# Implicit Solvent
if {0} {
gbis                on
alphaCutoff         12.0
ionConcentration    0.15
}


# Periodic Boundary Conditions
# NOTE: Do not set the periodic cell basis if you have also 
# specified an .xsc restart file!
if {1} {
cellBasisVector1     243.   0.    0.
cellBasisVector2     0.    85.   0.
cellBasisVector3     0.    0.    236.
cellOrigin           104.71382904052734 8.78188705444336 -69.67935943603516
}
#measure center $sel 146.83438110351563 271.4987487792969 284.0632629394531
# min {91.41999816894531 240.63499450683594 235.13299560546875} 
#max  {185.66400146484375 305.77801513671875 329.67498779296875}

wrapWater           on  ;# wraping water within the water box
wrapAll             on


# Force-Field Parameters
exclude             scaled1-4
1-4scaling          1.0
cutoff              12.
switching           on
switchdist          10.
pairlistdist        13.5


# Integrator Parameters
timestep            2.0  ;# 1fs/step
rigidBonds          water  ;# needed for fs steps
nonbondedFreq       1
fullElectFrequency  2  
stepspercycle       20


#PME (for full-system periodic electrostatics)
if {1} {
PME                 yes
PMEGridSizeX        243
PMEGridSizeY        85
PMEGridSizeZ        236
}


# Constant Temperature Control
langevin            on    ;# do langevin dynamics
langevinDamping     1     ;# damping coefficient (gamma) of 5/ps
langevinTemp        $temperature


# Constant Pressure Control (variable volume)
if {1} {
useGroupPressure      yes ;# needed for 2fs steps
#useFlexibleCell       no  ;# no for water box, yes for membranetest3_autopsf.pdb
#useConstantArea       no  ;# no for water box, yes for membrane

langevinPiston        on
langevinPistonTarget  1.01325 ;#  in bar -> 1 atm
langevinPistonPeriod  100.
langevinPistonDecay   50.
langevinPistonTemp    $temperature
}


restartfreq        50000    
dcdfreq            50000
xstFreq            50000
outputEnergies     10000
outputPressure     10000


## Fixed Atoms Constraint (set PDB beta-column to 1)
if {0} {
fixedAtoms          on
fixedAtomsFile      k14fix.fix 
fixedAtomsCol       B
fixedAtomsForces    off 
}

CUDASOAintegrate on
margin 4.0        ;# related to rattle algorithm 

###restrain atom 
if {0} {
constraints            on
consRef      	       ionized.pdb         
consKFile              bimc.fix
consexp	        2
consKCol                B
}
## COM


# Minimization
if {0} {
minimize            20000
reinitvels          $temperature
}

run 50000000 ;# 100 ns
